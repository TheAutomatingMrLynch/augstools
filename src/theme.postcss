	--color-secondary-100: 209 250 229; /* ⬅ #d1fae5 */
	--color-secondary-200: 167 243 208; /* ⬅ #a7f3d0 */
	--color-secondary-300: 110 231 183; /* ⬅ #6ee7b7 */
	--color-secondary-400: 52 211 153; /* ⬅ #34d399 */
	--color-secondary-500: 16 185 129; /* ⬅ #10b981 */
