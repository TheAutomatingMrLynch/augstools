	--color-surface-900: 24 24 27; /* ⬅ #18181b */
}

/* Applied to body with `<body data-theme="skeleton">` */
/* Created with: https://csshero.org/mesher/ */
[data-theme='skeleton'] {
	background-color:hsla(0,0%,98%,1);
	background-image: 
	radial-gradient(at 88% 68%, hsla(272,0%,71%,1) 0px, transparent 50%), 
	radial-gradient(at 34% 78%, hsla(281,0%,71%,1) 0px, transparent 50%), 
	radial-gradient(at 80% 0%, hsla(310,0%,71%,1) 0px, transparent 50%), 
	radial-gradient(at 0% 0%, hsla(54,0%,71%,1) 0px, transparent 50%);	
}